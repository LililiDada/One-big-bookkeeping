.paytype{
  margin-top: 20rpx;
  display: flex;
  height:200px;
  border-bottom: 1px solid #dbdbdb;
  border-top: 1px solid #dbdbdb;
}
.select{
  width: 100rpx;
  height:130rpx;
  text-align: center;
  align-content: center;
  display: inline-block;
  margin:30rpx 24rpx 0rpx;
}
.select-back{
  width:80rpx;
  height:80rpx;
  background-color: #bfbfbf ;
  border-radius: 250rpx;
  display: flex;
  margin: 0 auto;
}
.click-back{
  width:80rpx;
  height:80rpx;
  background-color: #9bc08a ;
  border-radius: 250rpx;
  display: flex;
  margin: 0 auto
}
.titleText{
  font-size:28rpx;
  /* margin-left: 12rpx; */
}
.select-type{
  width:55rpx;
  height:55rpx;
  margin: auto;
}
.detail{
  width: 100%;
  height: 80rpx;
  margin:45rpx 35rpx 0; 
  font-size: 35rpx;
  color: #9bc08a;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.detail-img{
  background: #9bc08a;
  width:100rpx;
  height: 100rpx;
}
.moneyipt,.concet-date,.remarkmsg{
  width: 300rpx;
  font-size: 40rpx;
  position: absolute;
  right: 50rpx;
  text-align: right;
  color: #575757;
}
.select-date,.remark{
  margin-left:35rpx; 
  margin-top: 25rpx
}
.concet-date{
  width: 400rpx;
  font-size: 35rpx
}
.remarkmsg{
  width: 400rpx;
  font-size: 40rpx;
}
.confirmbtn{
  margin:50rpx 50rpx 0;
  text-align: center;
  background: #9bc08a;
  color: white;
}