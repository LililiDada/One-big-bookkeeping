    <text style='font-size:35rpx'>设置</text>
    <image src='../../images/jiantou.png' class='jinru-img' ></image>
  </view>
  <view wx:if='{{loginbtnShow}}'>
    <button class='loginbtn' bindtap='loginTap'>登录</button>
  </view>
</view>